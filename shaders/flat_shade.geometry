#version 460 core

layout(triangles) in;
layout(triangles) out;

uniform uint layer;

in vec4 uv;
out vec4 uv_layered;

void main() {
    for (int i = 0; i < gl_in.length(); i++) {
        gl_Layer = l;
        gl_ViewportIndex = l;
        uv_layered = uv / pow(2, l);
        gl_Position = gl_in[i];
        EmitVertex();
    }
}